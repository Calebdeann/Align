{
  "expo": {
    "name": "Align",
    "slug": "align",
    "version": "1.0.0",
    "scheme": "align",
    "orientation": "portrait",
    "icon": "./assets/images/AlignLogo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/SplashScreen.png",
      "resizeMode": "cover",
      "backgroundColor": "#947AFF"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.aligntracker.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": false,
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {}
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.aligntracker.app",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-web-browser",
      "expo-router",
      "expo-font",
      "expo-apple-authentication",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "16.2"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Align to access your photos to add images to your workout templates.",
          "cameraPermission": "Allow Align to take photos for your workout templates."
        }
      ],
      "./plugins/withWorkoutWidget",
      "expo-live-activity"
    ],
    "extra": {
      "router": {},
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "LiveActivity",
                  "bundleIdentifier": "com.aligntracker.app.LiveActivity",
                  "entitlements": {
                    "com.apple.security.application-groups": ["group.com.aligntracker.app"]
                  }
                }
              ]
            }
          }
        },
        "projectId": "9360f59b-9137-443a-9823-a2a318eee257"
      }
    }
  }
}
