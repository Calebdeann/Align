{
  "expo": {
    "name": "Align",
    "slug": "align",
    "version": "1.0.0",
    "scheme": "align",
    "orientation": "portrait",
    "icon": "./assets/images/AlignLogo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/SplashScreen.png",
      "resizeMode": "cover",
      "backgroundColor": "#947AFF"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.aligntracker.app",
      "usesAppleSignIn": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.aligntracker.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-web-browser",
      "expo-router",
      "expo-font",
      "expo-apple-authentication",
      ["expo-build-properties", { "ios": { "deploymentTarget": "16.0" } }],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Align to access your photos to add images to your workout templates.",
          "cameraPermission": "Allow Align to take photos for your workout templates."
        }
      ]
    ]
  }
}
